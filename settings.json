{
  // ----------------
  // Vanilla settings
  // ----------------

  "editor.fontSize": 17,
  "editor.renderWhitespace": "all", // We want to see spaces and tabs
  "editor.wordWrap": "on",

  // Disable the confirmation box when deleting a file
  "explorer.confirmDelete": false,

  // Linux line endings are commonly used as a programming standard
  "files.eol": "\n",

  // Disable the "Gutter" decorations along the left side next to the line numbers
  // that show the Git history of the curernt code block
  "scm.diffDecorations": "none",

  // Disable the annoying release notes popup everytime that VSCode updates itself
  "update.showReleaseNotes": false,

  // Show the full path of the file in the window title
  "window.title": "${activeEditorLong}${separator}${rootName}",

  // 0 is the default, which will change if you accidently use Ctrl + - or Ctrl + =
  "window.zoomLevel": 0,

  // Don't open files in "preview" mode (e.g. italicized in the tab title)
  "workbench.editor.enablePreview": false,

  // Don't show the welcome screen
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ],

  // ------------------
  // Extension settings
  // ------------------

  // By default, the Python extension shows an annoying welcome screen
  "python.showStartPage": false,
}
